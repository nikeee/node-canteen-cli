{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"target": "es2015",
		"sourceMap": false,
		"outDir": "build",
		"newLine": "LF",
		"removeComments": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"strictNullChecks": true,
		"alwaysStrict": true
	},
	"exclude": [
		"node_modules/typescript"
	]
}